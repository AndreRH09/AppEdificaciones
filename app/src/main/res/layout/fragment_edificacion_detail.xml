<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EdificacionDetailFragment">

    <!-- ScrollView para que todo el contenido sea desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor principal del contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/background">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="titulo"
                    android:textColor="#ACBEBE"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="6dp"
                    android:src="@drawable/baseline_star_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/textCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="categoria"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="AÃ±o:"
                android:textColor="#F4F4EF"
                android:textSize="14sp" />

            <!-- Eliminado el ScrollView interno -->
            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="descripcion"
                android:textColor="#F4F4EF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_play_arrow_24"
                    android:tint="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_pause_24"
                    android:tint="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_stop_24"
                    android:tint="@android:color/white"/>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/white"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/passTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="00:00"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/sep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/dueTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#FFFFFF" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVerCroquis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Croquis"
                    android:layout_marginEnd="16dp"
                    style="@style/BotonPersonalizado" />

                <Button
                    android:id="@+id/btnMostrarComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostrar comentarios"
                    style="@style/SecondaryButton" />
            </LinearLayout>

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="bottom" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>

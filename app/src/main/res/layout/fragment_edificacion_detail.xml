<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EdificacionDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="titulo"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconFavorite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="8dp"
                android:src="@drawable/baseline_star_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="categoria"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Colocamos la descripciÃ³n dentro del ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="descripcion"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </ScrollView>

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/btnVerCroquis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Croquis" />

        <Button
            android:id="@+id/btnMostrarComentarios"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:text="Mostrar comentarios" />
    </LinearLayout>
</FrameLayout>
